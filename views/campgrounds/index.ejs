<% include ../partials/header %>

<div class="container">
    <div class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!!!!</h1>
            <a class="btn btn-primary" href="/new">Add new Camp</a>
        </div>
    </div>
    <div  class="row">
        <% for(var i=0 ; i < campgrounds.length ; i++) { %>
            <div class="col-md-3 col-sm-6">
                
                <div class="thumbnail">
                    <img id="indeximg" src=" <%= campgrounds[i]['image'] %> ">
                    <div class="caption">
                        <h4>
                            <%= campgrounds[i]["name"] %>
                        </h4>
                    </div>

                    <a class="btn btn-danger btn-xs" href="/campgrounds/<%= campgrounds[i]._id %>">More info</a>
                </div>
                
                
            </div>
        <% } %>
    </div>
    

</div>


<% include ../partials/footer %>